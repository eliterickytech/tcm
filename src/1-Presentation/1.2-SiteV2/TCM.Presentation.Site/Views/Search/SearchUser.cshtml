@{
    ViewData["Title"] = "ChefMelo - Search";
}
@inject TCM.Services.Interfaces.Services.IUserServices _userServices
@inject TCM.Services.Interfaces.Services.IConnectionServices _connectionServices
@inject TCM.Services.Interfaces.Services.IConnectionServices _connectionServices
@{
    var currentUser = _userServices.CurrentUserAsync();
}

@model IEnumerable<TCM.Services.Model.UserModel>
@section Styles {


}
@section Scripts {
    <script src="~/StaticFiles/js/invitation.js"></script>
    <script src="~/StaticFiles/js/search.js"></script>

}
<!-- BEGIN page-header -->
<h1 class="page-header">Search user <small>show user...</small></h1>
<!-- END page-header -->
<!-- BEGIN row -->
<div class="row">
    <div class="col-xl-10">
        <div class="panel panel-inverse">
            <!-- BEGIN panel-heading -->
            <div class="panel-heading">
                <h4 class="panel-title">Users</h4>
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-success" data-toggle="panel-reload"><i class="fa fa-redo"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-danger" data-toggle="panel-remove"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <!-- END panel-heading -->
            <!-- BEGIN panel-body -->
            <div class="panel-body">
                <form id="formInvitation"
                      name="formInvitation"
                      data-parsley-validate="true"
                      class="needs-validation"
                      method="post"
                      novalidate>
                    <table id="data-table-responsive" class="table table-striped table-bordered align-middle" style="width:100%">
                        <thead>
                            <tr>
                                <th width="60%" class="text-nowrap">Username</th>
                                <th class="text-nowrap">Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var user in Model)
                            {
                                <tr class="odd gradeX">
                                    <td width="60%">@user.UserName</td>
                                    <td class="align-center">
                                        <a href="/Invitation/Add?ConnectionUserId=@user.Id.Value" class="btn btn-theme btn-icon btn-circle btn-sm" title="Add invitation"><i class="fa fa-circle-check"></i></a>

                                        <a id="connectionProfile" href="/Profile?connectionUserId=@user.Id.Value" class="btn @(user.ProfileId == TCM.Services.Model.Enum.UserType.Administrative ? "btn-gray" : "btn-theme" ) btn-icon btn-circle btn-sm" title="View profile"><i class="fa fa-eye"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </form>
            </div>
            <!-- END panel-body -->
        </div>
    </div>
</div>
<!-- END row -->
