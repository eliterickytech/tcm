@{
    ViewData["Title"] = "Chef Melo - Remember PIN";

    ViewData["AppHeaderNone"] = "true";
    ViewData["AppSidebarNone"] = "true";
    ViewData["AppClass"] = "app-without-header app-without-sidebar";
    ViewData["AppContentClass"] = "p-0";
    ViewData["AppBodyClass"] = "pace-top";
}
@section Styles {
    <link href="~/StaticFiles/lib/gritter/css/jquery.gritter.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/StaticFiles/js/rememberPassword.js"></script>
    <script src="~/StaticFiles/js/demo/login-v2.demo.js"></script>
    <script src="~/StaticFiles/lib/gritter/js/jquery.gritter.js"></script>
    <script src="~/StaticFiles/lib/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/StaticFiles/js/demo/ui-modal-notification.demo.js"></script>
    <script src="~/StaticFiles/lib/@@highlightjs/cdn-assets/highlight.min.js"></script>
    <script src="~/StaticFiles/js/demo/render.highlight.js"></script>
    <script src="~/StaticFiles/lib/parsleyjs/dist/parsley.min.js"></script>
}
<div class="login login-v2 fw-bold">
    <div class="login-container">
        <div class="login-header">
            <div class="brand">
                <div class="d-flex align-items-center">
                    <img src="~/StaticFiles/img/tcm/Logo.png" width="40" height="40" /><b>&nbsp; Chef </b> Melo
                </div>
                <small>Remember password</small>
            </div>
            <div class="icon">
                <i class="fa fa-lock"></i>
            </div>
        </div>
        <div class="login-content">
            <form action="RememberPassword/Remember" id="formRemember" name="formRemember" data-parsley-validate="true" class="needs-validation" novalidate>
                <div class="form-floating mb-20px">
                    <input type="text" class="form-control fs-13px h-45px border-1" placeholder="Enter your username" id="username" required />
                    <label for="username" class="d-flex align-items-center text-gray-600 fs-13px">Enter your username</label>
                </div>
                <div class="mb-20px">
                    <button type="submit" class="btn btn-theme d-block w-100 h-45px btn-lg">GO</button>
                </div>
            </form>
        </div>
    </div>
</div>