@{
    ViewData["Title"] = "Chef Melo - Change PIN";

    ViewData["AppHeaderNone"] = "true";
    ViewData["AppSidebarNone"] = "true";
    ViewData["AppClass"] = "app-without-header app-without-sidebar";
    ViewData["AppContentClass"] = "p-0";
    ViewData["AppBodyClass"] = "pace-top";
}
@section Styles {
    <link href="~/lib/gritter/css/jquery.gritter.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/js/rememberPassword.js"></script>
    <script src="~/js/demo/login-v2.demo.js"></script>
    <script src="~/lib/gritter/js/jquery.gritter.js"></script>
    <script src="~/lib/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/js/demo/ui-modal-notification.demo.js"></script>
    <script src="~/lib/@@highlightjs/cdn-assets/highlight.min.js"></script>
    <script src="~/js/demo/render.highlight.js"></script>
    <script src="~/lib/parsleyjs/dist/parsley.min.js"></script>
}
<div class="login login-v2 fw-bold">
    <div class="login-container">
        <div class="login-header">
            <div class="brand">
                <div class="d-flex align-items-center">
                    <img src="~/img/tcm/Logo.png" width="40" height="40" /><b>&nbsp; Chef </b> Melo
                </div>
                <small>Change your PIN</small>
            </div>
            <div class="icon">
                <i class="fa fa-lock"></i>
            </div>
        </div>
        <div class="login-content">
            <form id="formChange" name="formChange" data-parsley-validate="true" class="needs-validation" novalidate>
                <input type="hidden" name="username" id="username" value="@ViewBag.Username" />
                <div class="form-floating mb-20px">
                    <input type="password" 
                           class="form-control fs-13px h-45px border-1" 
                           placeholder="Enter new PIN" 
                           id="password" 
                           minlength="5" 
                           pattern="[0-9]{5,12}" 
                           maxlength="12"
                           required />
                    <label for="password" class="d-flex align-items-center text-gray-600 fs-13px">Enter new PIN</label>
                </div>
                <div class="form-floating mb-20px">
                    <input type="password" 
                           class="form-control fs-13px h-45px border-1" 
                           placeholder="Confirm new PIN" 
                           id="confirmPassword" 
                           minlength="5" 
                           pattern="[0-9]{5,12}" 
                           maxlength="12"                           
                           required />
                    <label for="ConfirmPassword" class="d-flex align-items-center text-gray-600 fs-13px">Confirm new PIN</label>
                </div>

                <div class="mb-20px">
                    <button type="submit" class="btn btn-theme d-block w-100 h-45px btn-lg">SAVE</button>
                </div>
            </form>
        </div>
    </div>
</div>