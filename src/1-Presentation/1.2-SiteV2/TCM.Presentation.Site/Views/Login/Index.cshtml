@{
    ViewData["Title"] = "Chef Melo - Login";
    ViewData["AppHeaderNone"] = "true";
    ViewData["AppSidebarNone"] = "true";
    ViewData["AppClass"] = "app-without-header app-without-sidebar";
    ViewData["AppContentClass"] = "p-0";
    ViewData["AppBodyClass"] = "pace-top";
}
@section Styles {
    <link href="~/lib/gritter/css/jquery.gritter.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/js/login.js"></script>
    <script src="~/js/demo/login-v2.demo.js"></script>
    <script src="~/lib/gritter/js/jquery.gritter.js"></script>
    <script src="~/lib/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/js/demo/ui-modal-notification.demo.js"></script>
    <script src="~/lib/@@highlightjs/cdn-assets/highlight.min.js"></script>
    <script src="~/js/demo/render.highlight.js"></script>
    <script src="~/lib/parsleyjs/dist/parsley.min.js"></script>
}

<!-- BEGIN login -->
<div class="login login-v2 fw-bold">
    
    <!-- BEGIN login-container -->
    <div class="login-container">
        <!-- BEGIN login-header -->
        <div class="login-header">
            <div class="brand">
                <div class="d-flex align-items-center">
                    <img src="~/img/tcm/Logo.png" width="40" height="40" /><b>&nbsp; Chef </b> Melo
                </div>
                <small>Sign in with your credential</small>
            </div>
            <div class="icon">
                <i class="fa fa-lock"></i>
            </div>
        </div>
        <!-- END login-header -->
        <!-- BEGIN login-content -->
        <div class="login-content">
            <form action="Login/GetUser" method="GET" id="formLogin" name="formLogin" data-parsley-validate="true" class="needs-validation" novalidate>
                <div class="form-floating mb-20px">
                    <input type="text" class="form-control fs-13px h-45px border-1" placeholder="Username" id="username" name="username" required />
                    <label for="username" class="d-flex align-items-center text-gray-600 fs-13px">Username</label>
                </div>
                <div class="form-floating mb-20px">
                    <input type="password" 
                           class="form-control fs-13px h-45px border-1" 
                           placeholder="PIN" 
                           data-parsley-type="number" 
                           data-parsley-minlength="5" 
                           data-parsley-maxlength="12" 
                           data-parsley-pattern="[0-9]{5,12}" 
                           minlength="5" 
                           pattern="[0-9]{5,12}" 
                           maxlength="12"
                           name="password"
                           id="password"
                           required/>
                    <label for="password" class="d-flex align-items-center text-gray-600 fs-13px">PIN</label>
                </div>
                <div class="mb-20px">
                    Forgot your PIN? Tap <a id="forgot" target="_self" class="text-color" asp-action="Index" asp-controller="RememberPassword"><b>here.</b></a>
                </div>
                <div class="mb-20px">
                    <button type="submit" class="btn btn-theme d-block w-100 h-45px btn-lg">SIGN IN</button>
                </div>
                <div class="mb-20px">
                    New here? Tap to <a target="_self" asp-action="Index" asp-controller="CreateAccount"><b>sign up.</b></a>
                </div>
            </form>
        </div>
        <!-- END login-content -->
    </div>
    <!-- END login-container -->
</div>
<!-- END login -->
