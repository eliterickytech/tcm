
@{
    ViewData["Title"] = "ChefMelo - Connections";
}
@model IEnumerable<TCM.Services.Model.ConnectionsModel>
@section Styles {


}
@section Scripts {


    <script src="~/StaticFiles/js/search.js"></script>
}
<!-- BEGIN page-header -->
<h1 class="page-header">Invitations <small>show invitation...</small></h1>
<!-- END page-header -->
<!-- BEGIN row -->
<div class="row">
    <div class="col-xl-10">
        <div class="panel panel-inverse">
            <!-- BEGIN panel-heading -->
            <div class="panel-heading">
                <h4 class="panel-title">My Invitations</h4>
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-success" data-toggle="panel-reload"><i class="fa fa-redo"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-danger" data-toggle="panel-remove"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <!-- END panel-heading -->
            <!-- BEGIN panel-body -->
            <div class="panel-body">
                <table id="data-table-responsive" class="table table-striped table-bordered align-middle" style="width:100%">
                    <thead>
                        <tr>
                            <th width="30%" class="text-nowrap">Username</th>
                            <th width="30%" class="text-nowrap">Connection Date</th>
                            <th width="10%" class="text-nowrap">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var connection in Model)
                        {
                            <tr class="odd gradeX">
                                <td width="30%">@connection.UserName</td>
                                <td width="30%">@connection.CreatedDate.ToString("MM/dd/yyyy")</td>
                                <td width="10%" class="align-center">
                                    <a href="/Connection/UpdateStatusIdConnection?id=@connection.Id&connectionStatusType=@((int)TCM.Services.Model.Enum.ConnectionStatusType.Approved)" class="btn btn-theme btn-icon btn-circle btn-sm" title="Request approve"><i class="fa fa-circle-check"></i></a>
                                    &nbsp;
                                    <a href="/Connection/UpdateStatusIdConnection?id=@connection.Id&connectionStatusType=@((int)TCM.Services.Model.Enum.ConnectionStatusType.Blocked)" class="btn btn-theme btn-icon btn-circle btn-sm" title="Request block"><i class="fa fa-circle-xmark"></i></a>
                                    &nbsp;
                                    <a href="/Connection/UpdateStatusIdConnection?id=@connection.Id&connectionStatusType=@((int)TCM.Services.Model.Enum.ConnectionStatusType.Canceled)" class="btn btn-theme btn-icon btn-circle btn-sm" title="Request cancel"><i class="fa fa-circle-stop"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- END panel-body -->
        </div>
    </div>
</div>
<!-- END row -->
