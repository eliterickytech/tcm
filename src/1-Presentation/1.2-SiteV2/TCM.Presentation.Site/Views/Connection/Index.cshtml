@inject TCM.Services.Interfaces.Services.IUserServices _userServices
@{
    ViewData["Title"] = "ChefMelo - Connections";
    var user = _userServices.CurrentUserAsync();
}
@model IEnumerable<TCM.Services.Model.ConnectionsModel>

@section Styles {
    <link href="~/lib/datatables.net-bs5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/lib/datatables.net-responsive-bs5/css/responsive.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/assets/plugins/summernote/dist/summernote-lite.css" rel="stylesheet" />

}
@section Scripts {
    <script src="~/js/search.js"></script>
    <script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs5/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/lib/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/datatables.net-responsive-bs5/js/responsive.bootstrap5.min.js"></script>
    <script src="~/js/demo/table-manage-responsive.demo.js"></script>
    <script src="~/lib/@@highlightjs/cdn-assets/highlight.min.js"></script>
    <script src="~/js/demo/render.highlight.js"></script>
    <script src="~/assets/plugins/summernote/dist/summernote.js"></script>
}
<!-- BEGIN page-header -->
<h1 class="page-header">Connections <small>show connections...</small></h1>
<!-- END page-header -->
<!-- BEGIN row -->
<div class="row">
    <div class="col-xl-10">
        <div class="panel panel-inverse">
            <!-- BEGIN panel-heading -->
            <div class="panel-heading">
                <h4 class="panel-title">My connections</h4>
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-success" data-toggle="panel-reload"><i class="fa fa-redo"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-danger" data-toggle="panel-remove"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <!-- END panel-heading -->
            <!-- BEGIN panel-body -->
            <div class="panel-body">
                <table id="data-table-responsive" class="table table-striped table-bordered align-middle" style="width:100%">
                    <thead>
                        <tr>
                            <th width="30%" class="text-nowrap">Username</th>
                            <th width="30%" class="text-nowrap">Connection Date</th>
                            <th width="10%" class="text-nowrap">Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var connection in Model)
                        {

                            <tr class="odd gradeX">
                                <td width="30%">@connection.UserName</td>
                                <td width="30%">@connection.CreatedDate.ToString("MM/dd/yyyy")</td>
                                <td width="10%" class="align-center">
                                    <a id="connectionProfile" @(connection.ConnectionProfileId == (int)TCM.Services.Model.Enum.UserType.Administrative ? "" : "href=/Profile") class="btn @(connection.ConnectionProfileId == (int)TCM.Services.Model.Enum.UserType.Administrative ? "btn-gray" : "btn-theme" ) btn-icon btn-circle btn-sm" title="View profile"><i class="fa fa-eye"></i></a>
                                    &nbsp;
                                    <a id="connectionBlocked" @(connection.ConnectionProfileId == (int)TCM.Services.Model.Enum.UserType.Administrative ? "" : "href=/Connection/UpdateStatusIdConnection?id=" + connection.Id + "&connectionStatusType=3") class="btn @(connection.ConnectionProfileId == (int)TCM.Services.Model.Enum.UserType.Administrative ? "btn-gray" : "btn-theme" ) btn-icon btn-circle btn-sm" title="Block"><i class="fa fa-circle-xmark"></i></a>
                                    &nbsp;
                                    <a id="connectionCancelled" @(connection.ConnectionProfileId == (int)TCM.Services.Model.Enum.UserType.Administrative ? "" : "href=/Connection/UpdateStatusIdConnection?id=" + connection.Id + "&connectionStatusType=5") class="btn @(connection.ConnectionProfileId == (int)TCM.Services.Model.Enum.UserType.Administrative ? "btn-gray" : "btn-theme" ) btn-icon btn-circle btn-sm" title="Cancelled"><i class="fa fa-circle-stop"></i></a>
                                    &nbsp;
                                    <a id="connectionChat" href="/Chat/Details?connectionUserId=@connection.UserId" class="btn @(connection.ConnectionProfileId == (int)TCM.Services.Model.Enum.UserType.Administrative ? "btn-gray" : "btn-theme" ) btn-icon btn-circle btn-sm" title="View chat"><i class="fa fa-message"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- END panel-body -->
        </div>
    </div>
</div>
<!-- END row -->
