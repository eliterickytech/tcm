@model TCM.Presentation.Site.Models.HomeViewModel;

@section Styles {
    <link href="~/StaticFiles/lib/datatables.net-bs5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/StaticFiles/lib/datatables.net-responsive-bs5/css/responsive.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/StaticFiles/assets/plugins/summernote/dist/summernote-lite.css" rel="stylesheet" />
    <link href="~/StaticFiles/assets/plugins/lightbox2/dist/css/lightbox.css" rel="stylesheet" />

}
@section Scripts {
    <script src="~/StaticFiles/js/search.js"></script>
    <script src="~/StaticFiles/js/manageCollection.js"></script>
    <script src="~/StaticFiles/lib/@@highlightjs/cdn-assets/highlight.min.js"></script>
    <script src="~/StaticFiles/js/demo/render.highlight.js"></script>
    <script src="~/StaticFiles/assets/plugins/summernote/dist/summernote.js"></script>
    <script src="~/StaticFiles/lib/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/StaticFiles/assets/plugins/lightbox2/dist/js/lightbox.min.js"></script>
    <script src="~/StaticFiles/js/site.js"></script>
}
<!-- BEGIN page-header -->
<h1 class="page-header">Collection <small>show all collections...</small></h1>
<!-- END page-header -->
<!-- BEGIN row -->
<div class="row">
    <div class="col-xl-10 mb-15px text-end">
        <button class="btn btn-theme" id="btnAddCollection">Add new Collection</button>
    </div>
</div>
@foreach (var collection in Model.CollectionsModel.ToList().Where(x => x.Enabled).DistinctBy(x => x.CollectionName))
{
    <div class="row">
        <div class="col-xl-10">
            <div class="panel panel-inverse">
                <div class="panel-heading bg-orange-700 ui-sortable-handle">
                    <h4 class="panel-title">@collection.CollectionName</h4>
                    <div class="btn-group btn-group-toggle my-n1" data-toggle="buttons">
                        <input type="radio" name="delete" onclick="javascript:DeleteCollection(@collection.Id)" class="btn-check delete-btn" id="delete" autocomplete="off" checked />
                        <label class="btn btn-danger btn-xs" for="delete">Delete</label>
                    </div>
                </div>
                <div class="panel-body text-black">
                    <table id="data-table-responsive" class="table table-striped align-middle" style="width:100%">
                        <thead>
                            <tr>
                                <th class="w-25"></th>
                                <th class="w-50">
                                    Collection Name
                                </th>
                                <th class="w-25">
                                    Item
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CollectionsItemModel.Where(x => x.CollectionName == collection.CollectionName))
                            {
                                <tr>
                                    <td>
                                        @if (item.CollectionItemTypeId == 5)
                                        {
                                            <video width="100" height="100" src="@item.Url" controls><source width="100" height="100" src="@item.Url" type="video/mp4"><object><embed width="350" height="350" allowfullscreen="false" allowscriptaccess="always" type="application/x-shockwave-flash" src="@item.Url"></object></video>
                                        }
                                        else
                                        {
                                            <a href="@item.Url" data-lightbox="gallery-group-1">
                                                <img class="img" src=@item.Url width="100" height="100" />
                                            </a>
                                        }

                                    </td>
                                    <td>
                                        @item.CollectionName
                                    </td>
                                    <td>
                                        @item.Description
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
