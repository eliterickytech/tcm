@model TCM.Services.Model.CollectionItemModel
@inject TCM.Services.Interfaces.Services.IUserServices _userServices
@{
    var currentUser = _userServices.CurrentUserAsync();
}
@section Scripts {

    <script src="~/StaticFiles/js/search.js"></script>
    <script src="~/StaticFiles/js/sendDelights.js"></script>
}
<!-- BEGIN page-header -->
<h1 class="page-header">Send delight <small>show share...</small></h1>
<div class="row">
    <div class="col-xl-10">
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <h4 class="panel-title">Send delights</h4>
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-success" data-toggle="panel-reload"><i class="fa fa-redo"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-danger" data-toggle="panel-remove"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <div class="panel-body">
                <form id="formSharedSendDelights"
                      name="formSharedSendDelights"
                      data-parsley-validate="true"
                      class="needs-validation"
                      method="post"
                      novalidate>
                    <input type="hidden" name="hdnUserId" id="hdnUserId" value="@currentUser.Id" />
                    <input type="hidden" name="hdnCollectioItemId" id="hdnCollectioItemId" value="@Model.Id" />
                    <input type="hidden" name="hdnUserName" id="hdnUserName" value="@currentUser.UserName" />


                    <div class="col-xl-10 text-center">
                        <img src="@Model.Url" />
                    </div>
                    <div class="col-xl-10">
                        <label class="form-label col-form-label">User name*</label>
                        <select class="form-control" name="user" id="user" placeholder="Find a user" required></select>
                    </div>
                    <div class="col-xl-10 mb-20px">
                        <label class="form-label col-form-label">Write them a special message:</label>
                        <textarea class="form-control" id="message" name="message" rows="4" placeholder="Write your short message here."></textarea>
                    </div>
                    <div class="form-check form-switch mb-2">
                        <input class="form-check-input" type="checkbox" name="postMyActivity" id="postMyActivity" checked="">
                        <label class="form-check-label" for="postMyActivity">Post my activity</label>
                    </div>
                    <div class="col-xl-10">
                        <button type="submit" class="btn btn-theme d-block w-100 h-45px btn-lg">SHARE</button>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>