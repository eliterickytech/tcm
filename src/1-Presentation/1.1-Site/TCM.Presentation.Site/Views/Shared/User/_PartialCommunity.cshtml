@model List<TCM.Services.Model.CollectionItemModel>

<div class="bar"></div>
<div class="title_community">
    <h2>Collectible delights in the Community</h2>
</div>
<div id="carouselCollectionIndicators" class="area_community" data-bs-touch="true" data-bs-ride="carousel">
    <div class="carousel-inner" id="carouselInner">
        @for (int i = 0; i < Model.Count; i++)
        {
          
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <div class="row">
                    <div class="image-grid">
                    @for (int r = 0; r < (Model.Count >= 4 ? 4 : Model.Count); r++)
                    {
                            <div class="image-container">
                        <div class="col-md-3">
                                
                            <img id="imgCollectionItem" src="@Model[r].Url" data-id="@Model[r].Id"
                                 alt="@Model[r].Description"
                                 width="@Model[r].CollectionItemTypeWidth"
                                 height="@Model[r].CollectionItemTypeHeigh" />
                        </div>
                        </div>
                    }
                    </div>

                </div>
            </div>
        }
    </div>
</div>
