@{
    Layout = "_LayoutLogin";
}
@model TCM.Presentation.Site.Models.HomeViewModel

@await Html.PartialAsync("~/Views/Shared/Home/User/_PartialMenu.cshtml")

@await Html.PartialAsync("~/Views/Shared/Home/User/_PartialSearch.cshtml")

@await Html.PartialAsync("~/Views/Shared/Home/User/_PartialBanner.cshtml", Model.BannersModel)

@await Html.PartialAsync("~/Views/Shared/Home/User/_PartialVideo.cshtml", Model.BannersModel)

<a href="#">
    <div class="btn_home_1">
        <h2>VISIT THE WEBSITE</h2>
    </div>
</a>

@await Html.PartialAsync("~/Views/Shared/Home/User/_PartialCommunity.cshtml", Model.CollectionsItemModel.OrderByDescending(x => x.CollectionId).ToList())

<a asp-controller="Chat">
    <div class="btn_home_2">
        <h2>CHAT WITH US</h2>
    </div>
</a>

@await Html.PartialAsync("~/Views/Shared/Home/User/_PartialFooter.cshtml")