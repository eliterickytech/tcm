@model CollectionDetails;
@{
    Layout = "_LayoutLogin";
}
<section id="delight">
    <div class="delight">
        <div class="delight_int">
            <div class="area_delight">
                <div class="close_email">
                    <img width="10px" height="10px" src="~/img/Close.png" onclick="window.location.href='/Home/Index'" alt="">
                </div>
                <div class="logo">
                    <img width="100px" height="100px" src="~/img/Logo.png" alt="Patisserie">
                </div>
                <div class="delight_img">
                    <img src="@Model.UrlImage" width="230" height="230"/>
                </div>
                <div class="area_texts_delight">
                    <div class="title_description_delight">
                        <h2>Nome da Imagem  - @Model.Quantity Item</h2>
                    </div>
                    <div class="info_delight">
                        <p>
                            @Model.CollectionItemDescription
                        </p>
                    </div>
@*                    <div class="by_delight">
                        <p>Sent by chef_melo</p>
                    </div>*@
                    <div class="share_delight">
                        @if (Model.Quantity > 1)
                        {
                            <p>Share this delight with someone.</p>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer>
        <div class="collectibles">
            <img width="20px" height="20px" src="~/img/logo_collectibles.png" alt="">
            <h2>My Collectibles</h2>
        </div>
    </footer>
</section>